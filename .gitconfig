[core]
	pager = less -q -R
	excludesfile = ~/.gitignore
	preloadindex = true
	editor = vim

[color]
	diff = auto
	status = auto
	branch = auto
	grep = auto

[alias]
	st = status
	co = checkout
	sw = switch
	ci = commit -v
	di = diff
	diffs = diff --cached
	ds = diff --cached
	pp = pull --prune

[pull]
	rebase = false

[push]
	default = current

[user]
	name = drillbits
	email = neji@drillbits.jp
	signingkey = AF1D2B41AAC238CF

[diff]
	compactionHeuristic = true

[ghq]
	root = ~/src

[url "git@github.com:"]
	insteadOf = https://github.com/

[commit]
	gpgsign = true
