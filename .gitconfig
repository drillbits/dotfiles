[user]
	name = drillbits
	email = neji@drillbits.jp
[core]
	excludesfile = ~/.gitignore
[color]
	diff = auto
	status = auto
	branch = auto
	grep = auto
[push]
	default = current
[alias]
	st = status
	co = checkout
	ci = commit -v
	di = diff
	br = branch
	puhs = push
	psuh = push
	pus = push
	puh = push
	pl = !git pull && git submodule update --init
[pager]
	log  = diff-highlight | less
	show = diff-highlight | less
	diff = diff-highlight | less
[ghq]
	root = ~/src
