  {
    "defaults": [
      "cpfe",
      "--wchar_t_keyword",
      "--c++",
      "--no_warnings",
      "--edge",
      "--new_for_init",
      "--rtti",
      "--edge",
      "--exceptions",
      "-D_EDG_COMPILER",
      "-D_USE_DECLSPECS_FOR_SAL=1",
      "-D_DEBUG"
    ],
    "source_file_format": "-f %s",
    "expressions": [
      {
        "match": "/I(.*)",
        "replace": "-I\n$1"
      },
      {
        "match": "/D(.*)",
        "replace": "-D$1"
      },
      {
        "match": "/AI(.*)",
        "replace": "--using_directory\n$1"
      },
      {
        "match": "/EHsc",
        "replace": "-D_CPPUNWIND\n--exceptions"
      },
      {
        "match": "/dE--header_only_fallback",
        "replace": "--header_only_fallback"
      }
    ]
  }