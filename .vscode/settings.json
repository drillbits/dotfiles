{
    "editor.bracketPairColorization.enabled": true,
    "editor.fontFamily": "Noto Sans Mono CJK JP",
    "editor.fontSize": 13,
    "editor.formatOnSave": true,
    "editor.minimap.enabled": false,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?、。　",
    "editor.wordWrap": "off",
    "files.autoSave": "off",
    "go.alternateTools": {
        "go-langserver": "gopls"
    },
    "go.buildFlags": [],
    "go.buildOnSave": "package",
    "go.coverOnSave": false,
    "go.formatTool": "goimports",
    "go.lintFlags": [],
    "go.lintOnSave": "package",
    "go.lintTool": "staticcheck",
    "go.toolsEnvVars": {
        "GO111MODULE": "on"
    },
    "go.useCodeSnippetsOnFunctionSuggest": false,
    "go.useLanguageServer": true,
    "go.vetFlags": [],
    "go.vetOnSave": "package",
    "licenser.author": "drillbits",
    "licenser.license": "AL2",
    "python.formatting.blackPath": "~/.local/bin/black",
    "python.formatting.provider": "black",
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Path": "~/.local/bin/flake8",
    "python.linting.pylintEnabled": false,
    "python.sortImports.args": [
        "-rc"
    ],
    "python.sortImports.path": "~/.local/bin/isort",
    "terminal.integrated.fontFamily": "Noto Sans Mono CJK JP",
    "terminal.integrated.profiles.linux": {
        "bash": {
            "path": "bash",
            "args": [
                "-l"
            ]
        },
    },
    "terminal.integrated.profiles.osx": {
        "bash": {
            "path": "bash",
            "args": [
                "-l"
            ]
        },
    },
    "workbench.editor.enablePreview": false,
    "[html]": {
        "editor.formatOnSave": false
    },
    "breadcrumbs.enabled": true,
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[dockerfile]": {
        "editor.defaultFormatter": "ms-azuretools.vscode-docker"
    },
    "terraform.indexing": {
        "enabled": false,
        "liveIndexing": false,
        "delay": 500,
        "exclude": [
            ".terraform/**/*",
            "**/.terraform/**/*"
        ]
    },
    "terraform.languageServer": {
        "external": true,
        "args": [
            "serve"
        ]
    },
    "todo-tree.tree.showScanModeButton": false,
}