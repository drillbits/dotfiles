augroup vimrc
  autocmd!
augroup END

set scrolloff=5
set textwidth=0
set nobackup
set noswapfile
set noundofile
set autoread
set hidden
set formatoptions=lmoq
set vb t_vb=
set browsedir=buffer
set whichwrap=b,s,h,l,<,>,[,]
set showcmd
set showmode
set viminfo='50,<1000,s100,\"50
set modelines=0
set notitle

set clipboard+=unnamed
set clipboard+=autoselect

" set mouse=
set guioptions+=a
set ttymouse=xterm2

filetype plugin on
