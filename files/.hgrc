[ui]
username = drillbits <neji@drillbits.jp>
merge = internal:merge
[ui]
ignore = ~/.hgignore_global
[extensions]
color =
info = ~/.hgext/info.py
graphlog =
hgshelve = ~/.hgext/hgshelve/hgshelve.py
pager =
mq =
transplant =
record =
rebase =
hgflow = ~/.hgext/hgflow.py
[pager]
pager = LESS='FSRX' less
quiet = True
ignore = version, help, update
attend = annotate, cat, diff, export, glog, log, qdiff
[hooks]
update.clean = find . -name \*.pyc -or -name \*.orig | xargs rm -f
[alias]
cb = ci --close-branch -m 'close.'
[hostfingerprints]
bitbucket.org = 46:de:34:e7:9b:18:cd:7f:ae:fd:8b:e3:bc:f4:1a:5e:38:d7:ac:24

%include ~/.hgrc.local
