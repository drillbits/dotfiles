[ui]
username = drillbits
merge = internal:merge
[extensions]
color =
info = ~/.hgext/info.py
graphlog =
hgshelve = ~/.hgext/hgshelve/hgshelve.py
pager =
mq =
transplant =
record =
[pager]
pager = LESS='FSRX' less
quiet = True
ignore = version, help, update
attend = annotate, cat, diff, export, glog, log, qdiff
[hooks]
update.clean = find . -name \*.pyc -or -name \*.orig | xargs rm -f
[alias]
cb = ci --close-branch -m 'close.'
[hostfingerprints]
bitbucket.org = 45:ad:ae:1a:cf:0e:73:47:06:07:e0:88:f5:cc:10:e5:fa:1c:f7:99

%include ~/.hgrc.local
